root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120

[*.css]
indent_size = 2

[*.d]
dfmt_soft_max_line_length = 120
dfmt_space_after_cast = false
dfmt_split_operator_at_line_end = true
dfmt_template_constraint_style = conditional_newline
